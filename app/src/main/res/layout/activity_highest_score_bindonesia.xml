<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_highest_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps2"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.fawazalrasyid.gamequiz.HighestScoreBindonesia">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_marginTop="60dp"
            android:text="Skor Anda :"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:id="@+id/textScore"
            android:textSize="25dp"
            android:background="#61d3cf"
            android:textColor="#fff"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/textHighScore"
            android:layout_width="500dp"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:background="#FF6013"
            android:padding="16dp"
            android:text="Skor Tertinggi :"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"

            android:textColor="#fff" />

        <Button
            android:layout_marginTop="85dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Coba Lagi"
            android:background="#FF5562"
            android:textColor="#202f65"
            android:padding="8dp"
            android:layout_marginBottom="24dp"
            android:id="@+id/trybtn"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Main Menu"
            android:background="#FF5562"
            android:textColor="#202f65"
            android:padding="8dp"
            android:layout_marginBottom="24dp"
            android:id="@+id/mainbtn"/>



    </LinearLayout>

</RelativeLayout>